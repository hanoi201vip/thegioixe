//homes<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Login</title>
<script>
var validateForm = function(){
var username=loginForm.username.value;
var password = loginForm.password.value;
if(username != "" && password != ""){
var msg = document.getElementById("msg");
msg.innerHTML = "";
return true;
}else{
var msg = document.getElementById("msg");
msg.innerHTML = "<b style='color:red'>Please fill your username and password</b>"
return false;
}
}
</script>


</head>

<body>
<form id="loginForm" name="loginForm" onsubmit="return validateForm()">
 Username
 <input type="text" name="username"/>
 <br />
 Password
 <input type="password" name="password"/>
 <br />
 <span id="msg"></span>
 <input type="submit" value="Submit" />
</form>
</body>
</html>
